<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.pe.felixproject.commons.log.service.impl.WebLogMapper">

	<resultMap id="webLogList" type="kr.pe.felixproject.commons.log.service.WebLogVO">
		<result property="logSeq" column="LOG_SEQ" />
		<result property="url" column="URL" />
		<result property="staffNo" column="STAFF_NO" />
		<result property="ipAddress" column="IPADDRESS" />
	</resultMap>

	<select id="selectWebLogList" parameterType="WebLogVO" resultMap="webLogList" lang="raw">
		<![CDATA[ 
			SELECT   a.LOG_SEQ,
			         a.URL,
			         a.STAFF_NO,
			         a.IPADDRESS
			FROM     TN_WEBLOG a
			ORDER BY a.LOG_SEQ DESC
		]]>
	</select>

	<insert id="insertWebLog" parameterType="WebLog">
		<![CDATA[ 
			INSERT INTO TN_WEB_LOG ( 
				   LOG_SEQ, 
				   URL, 
				   STAFF_NO, 
				   IP_ADDRESS
			) VALUES (
			       DATE_FORMAT(now(6),'%Y%m%d%H%i%s%f'),
			       #{url},
			       #{staffNo},
			       #{ipAddress}
			)       
		]]>
	</insert>

</mapper>