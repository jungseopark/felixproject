<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="LogInOut">

	<typeAlias  alias="logInVO" type="kr.pe.felixproject.common.service.LogInOutVO"/>
	
	<resultMap id="logInUser" class="kr.pe.felixproject.common.service.LogInOutVO">
		<result property="userId" column="USER_ID" />
		<result property="userName" column="USER_NAME" />
	</resultMap>

	<select id="LogInOutDAO.encryptPassword" parameterClass="String" resultClass="String">
		<![CDATA[ SELECT SHA1(#password#) ]]>
	</select>
	
	<select id="LogInOutDAO.actionLogIn" parameterClass="logInVO" resultMap="logInUser">
		<![CDATA[ 
			SELECT  a.USER_ID,
			        a.USER_NAME
			  FROM  TN_LOGINUSER a
			 WHERE  a.USER_ID = #searchUserId#
			   AND  a.USER_PASSWORD = #searchUserPassword#
		]]>
	</select>

</sqlMap>